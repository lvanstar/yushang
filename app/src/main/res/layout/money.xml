<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8f8f8"
    android:id="@+id/home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <RelativeLayout
            android:id="@+id/money_back"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/w3"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转赠寓币"
            android:textSize="@dimen/text_large"
            android:textColor="@color/title"
            android:layout_centerInParent="true" />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/xian"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="21"
        android:orientation="vertical"
        android:background="#f2f2f2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#f3f3f3"
            android:padding="4dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/icon_money_real"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="我的钱包："
                android:textColor="#a6a6a6"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/money_mymoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19888"
                android:textColor="#a6a6a6"
                android:textSize="16sp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:background="#f8f8f8">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="#ffffff">

                <EditText
                    android:id="@+id/money_et1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/image01"
                    android:hint="请输入目标账号手机号"
                    android:textColorHint="#dbdbdb"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:background="#ffffff" />

                <ImageView
                    android:id="@+id/image01"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/phone"
                    android:scaleType="fitCenter"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:background="#ffffff">

                <EditText
                    android:id="@+id/money_et2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/image02"
                    android:hint="请输入转出的寓币数量"
                    android:textColorHint="#dbdbdb"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:background="#ffffff" />

                <ImageView
                    android:id="@+id/image02"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icon_money_real"
                    android:scaleType="fitCenter"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/money_ok"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#cccccc"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:text="确认转赠"
            android:textColor="#999999"
            android:textSize="18sp"
            android:gravity="center" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"></View>
    </LinearLayout>
</LinearLayout>
