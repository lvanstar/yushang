<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="enjoytouch.com.redstar.activity.AllBrandActivity">

    <RelativeLayout
        style="@style/Title"
        android:background="@color/defaulttxt2"
        android:id="@+id/relativeLayout">

        <include
            android:id="@+id/back"
            layout="@layout/layout_back"></include>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部品类"
            android:textSize="@dimen/text_large"
            android:textColor="@color/text01"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/xian"
            android:layout_alignParentBottom="true"
            android:background="@color/xian"></View>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/alpha"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="13"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/list1_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white">
                    <ListView
                        android:id="@+id/lv_large"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@null"

                        android:listSelector="#00000000"
                        android:focusableInTouchMode="true">
                    </ListView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:background="@color/defaulttxt2">
                    <GridView
                        android:id="@+id/gv_min"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:numColumns="3"
                        android:listSelector="#00000000"
                        android:divider="@null">
                    </GridView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
