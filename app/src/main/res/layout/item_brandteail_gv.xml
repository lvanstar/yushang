<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/shangpin_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/back_round_shangpin">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_shangpin_sv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                fresco:placeholderImage="@drawable/placeholder_rectangle"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:actualImageScaleType="centerCrop"
                fresco:roundedCornerRadius="5dp"
                fresco:roundTopLeft="true"
                fresco:roundTopRight="true"
                fresco:roundBottomLeft="false"
                fresco:roundBottomRight="false" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e9e9e9"
                />
            <TextView
                android:id="@+id/shangpin_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="32px"
                android:maxEms="6"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/text_middle"/>
            <TextView
                android:id="@+id/shangpin_values"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text05"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="32px"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="@dimen/text_small"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:id="@+id/shangpin_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text05"
                    android:layout_marginLeft="32px"
                    android:textSize="@dimen/text_small"
                    android:layout_centerVertical="true"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="32px"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:id="@+id/item_shang_collect_iv"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/start"
                        android:scaleType="fitCenter" />
                    <TextView
                        android:id="@+id/shangpin_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textSize="@dimen/text_small"
                        android:textColor="@color/text06"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/item_shang_collect_iv"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>