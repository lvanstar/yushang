<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="enjoytouch.com.redstar.activity.BrandSearchResultActivity">
    <LinearLayout
        style="@style/Title"
        android:background="@color/title"
        android:orientation="horizontal">
        <include
            android:id="@+id/back"
            layout="@layout/layout_back">
        </include>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/text_view_boder5">
            <ImageView
                android:id="@+id/si_hint"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/search"
                android:scaleType="fitStart"/>
            <TextView
                android:id="@+id/te_keyword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="6dp"
                android:textColor="@color/text02"
                android:textSize="@dimen/text_middle"
                android:background="@drawable/text_view_boder5"
                android:gravity="center_vertical|left"
                android:layout_toRightOf="@id/si_hint"/>
            <ImageView
                android:id="@+id/si_close"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/guanbi"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"/>
        </RelativeLayout>
        <!--        <TextView
                    android:id="@+id/sr_keyword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:paddingLeft="6dp"
                    android:background="@drawable/text_view_boder5"
                    android:gravity="center_vertical|left"
                    android:textColor="#000000"
                    android:textSize="18sp"/>-->

        <RelativeLayout
            android:id="@+id/sr_select"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/discount_select_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/w2"
                android:scaleType="fitCenter"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"/>
        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xian"
        android:background="@color/xian"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/sr_nothing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/sr_none"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/a24"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/false1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sr_none"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:text="没有找到结果"
                android:textSize="16sp"
                android:textColor="#9e9e9e"/>

        </RelativeLayout>

            <com.jcodecraeer.xrecyclerview.XRecyclerView
                android:id="@+id/highest_search_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </RelativeLayout>


</LinearLayout>
