                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/Rl01"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/tv_dingwei222"
                        android:layout_width="28dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_address_222"
                        android:scaleType="fitCenter"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_dingwei222">

                        <TextView
                            android:id="@+id/tv_dizhi222"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/make_order_name_Tv"
                            android:text="收货地址：上海市镇怒江北路598号4楼5-1号"
                            android:textColor="@color/text01"
                            android:textSize="@dimen/text_small" />

                        <TextView
                            android:id="@+id/make_order_name_Tv"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/tv_dizhi222"
                            android:text="收货人：李益雄"
                            android:textColor="@color/text01"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textSize="@dimen/text_small" />

                        <TextView
                            android:id="@+id/make_order_phone_Tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="185123456789"
                            android:textColor="@color/text01"
                            android:textSize="@dimen/text_small" />
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@color/white">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/youjiantouhui" />
                </RelativeLayout>


            </LinearLayout>

            <View
                android:id="@+id/make_order_view"
                android:layout_width="match_parent"
                android:layout_height="5dp">
            </View>


            <RelativeLayout
                android:id="@+id/make_order_choose2_Rl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="支付方式选择"
                    android:textColor="@color/text01"
                    android:textSize="@dimen/text_middle" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/make_order_choose2_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="第三方支付"
                        android:textColor="@color/text55"
                        android:textSize="@dimen/text_middle" />

                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"></View>



            <ListView
                android:id="@+id/order_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
