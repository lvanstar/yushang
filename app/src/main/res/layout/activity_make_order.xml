                <TextView
                    android:id="@+id/make_order_Tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="买家留言"
                    android:textColor="@color/text01"
                    android:textSize="@dimen/text_middle" />

                <EditText
                    android:id="@+id/make_order_Et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/make_order_Tv2"
                    android:background="@null"
                    android:hint="选填,可填写您对订单的附加要求"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:lines="1"
                    android:maxLength="140"
                    android:layout_alignTop="@+id/make_order_Tv2"
                    android:textColorHint="@color/xian"
                    android:textSize="@dimen/text_middle"
                    android:paddingRight="10dp"
                    android:paddingBottom="15dp"
                    android:layout_toLeftOf="@id/si_close"
                    />
                <ImageView
                    android:id="@+id/si_close"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/guanbi"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:visibility="visible"/>
            </RelativeLayout>
