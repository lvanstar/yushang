<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    tools:context="enjoytouch.com.redstar.activity.BrandHomeList2Activity"
    android:id="@+id/home">
    <enjoytouch.com.redstar.selfview.observableScrollViewo.ObservableScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/brand_home_list2_sv"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    fresco:placeholderImage="@drawable/pic2_15"
                    fresco:placeholderImageScaleType="fitCenter" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#60000000"
                    android:paddingLeft="50px"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="30px"
                    android:paddingBottom="30px">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/pic"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/yu"
                        fresco:placeholderImageScaleType="centerCrop"
                        fresco:roundedCornerRadius="5dp"
                        fresco:roundTopLeft="true"
                        fresco:roundTopRight="true"
                        fresco:roundBottomLeft="true"
                        fresco:roundBottomRight="true" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp">
                        <TextView
                            android:id="@+id/brand_home_list2_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="漾美 medfsd"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_middle"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/brand_home_list2_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="在美丽中传递生活的喜悦"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_small"/>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
            <WebView
                android:id="@+id/wv_brand"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </enjoytouch.com.redstar.selfview.observableScrollViewo.ObservableScrollView>
    <RelativeLayout
        style="@style/Title">
        <RelativeLayout
            android:id="@+id/details_rl"
            android:background="@color/touming"
            android:alpha="0.0"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </RelativeLayout>
        <include
            android:id="@+id/back"
            layout="@layout/layout_back">
        </include>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/share"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon2_2"
                android:scaleType="fitCenter"/>
            <ImageView
                android:id="@+id/zan"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon2_6"
                android:scaleType="fitCenter"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/collect_cnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="21"
                android:shadowColor="#FF666666"
                android:shadowRadius="10"
                android:shadowDx="0"
                android:shadowDy="0"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/text_small"
                android:layout_marginRight="9dp"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/homepage_up_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/up"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40px"
        android:layout_marginRight="35px"
        android:visibility="visible"/>
</RelativeLayout>
