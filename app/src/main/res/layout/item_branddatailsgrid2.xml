<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <LinearLayout
            android:id="@+id/zong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/qb"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:gravity="center">
                <RelativeLayout
                    android:id="@+id/man_jian"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <RelativeLayout
                        android:id="@+id/jian1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/jian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥"
                            android:textSize="20sp"
                            android:textColor="@color/defaulttxt2"
                            android:paddingTop="7dp" />
                        <ImageView
                            android:id="@+id/iv_jinbi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/tv3_jian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20000"
                        android:textColor="@color/defaulttxt2"
                        android:textSize="35sp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/jian1"/>
                    <TextView
                        android:id="@+id/zhe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="折"
                        android:layout_toRightOf="@id/tv3_jian"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/defaulttxt2"
                        android:textSize="20sp"/>
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/use_limit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="满3999使用"
                android:textColor="@color/defaulttxt2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/state_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:padding="10dp"
                    android:src="@drawable/wan"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>