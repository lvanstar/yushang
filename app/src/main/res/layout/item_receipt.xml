<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/xian"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8.5">

            <TextView
                android:id="@+id/receipt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货人：李义兄"
                android:textSize="@dimen/text_middle"
                android:textColor="@color/text02"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/receipt_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13815856236"
                android:textSize="@dimen/text_middle"
                android:textColor="@color/text02"
                android:layout_toRightOf="@+id/receipt_name"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/receipt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货地址:上海市"
                android:textSize="@dimen/text_middle"
                android:textColor="@color/text02"
                android:layout_below="@+id/receipt_name"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5">
            <ImageView
                android:id="@+id/receipt_Iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/pay_unselected"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/xian"></View>
</LinearLayout>