<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    tools:context="enjoytouch.com.redstar.activity.QuChuDetailActivity"
    android:id="@+id/home">
    <enjoytouch.com.redstar.selfview.observableScrollViewo.ObservableScrollView
        android:id="@+id/quchu_details_os"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_viewpage_image"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="50px"
                android:layout_marginTop="35px">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/cover_image"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    fresco:placeholderImage="@drawable/placeholder_square"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:roundedCornerRadius="5dp"
                    fresco:roundTopLeft="true"
                    fresco:roundTopRight="true"
                    fresco:roundBottomLeft="true"
                    fresco:roundBottomRight="true"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_middle"
                        android:textColor="@color/text01"/>
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text01"
                        android:textSize="@dimen/text_small"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/quchu_details_value_ll"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:visibility="visible">
                        <RelativeLayout
                            android:id="@+id/lable_ll1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone">
                            <com.facebook.drawee.view.SimpleDraweeView
                                android:id="@+id/label_iv1"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_centerVertical="true"
                                fresco:placeholderImage="@drawable/icon2_3"
                                fresco:placeholderImageScaleType="fitCenter"
                                fresco:actualImageScaleType="fitCenter"/>
                            <TextView
                                android:id="@+id/label_text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="生活"
                                android:layout_toRightOf="@+id/label_iv1"
                                android:textSize="@dimen/text_small3"
                                android:textColor="@color/text11"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="2dp"/>
                        </RelativeLayout>
                            <RelativeLayout
                            android:id="@+id/lable_ll2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:visibility="gone">
                            <com.facebook.drawee.view.SimpleDraweeView
                                android:id="@+id/label_iv2"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_centerVertical="true"
                                fresco:placeholderImage="@drawable/icon2_4"
                                fresco:placeholderImageScaleType="fitCenter"
                                fresco:actualImageScaleType="fitCenter"/>
                            <TextView
                                android:id="@+id/label_text2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="咖啡馆"
                                android:textSize="@dimen/text_small3"
                                android:textColor="@color/text11"
                                android:layout_toRightOf="@+id/label_iv2"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="2dp"/>
                        </RelativeLayout>
                            <RelativeLayout
                            android:id="@+id/lable_ll3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:visibility="gone">
                            <com.facebook.drawee.view.SimpleDraweeView
                                android:id="@+id/label_iv3"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_centerVertical="true"
                                fresco:placeholderImage="@drawable/icon2_5"
                                fresco:placeholderImageScaleType="fitCenter"
                                fresco:actualImageScaleType="fitCenter"/>
                            <TextView
                                android:id="@+id/label_text3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="家具"
                                android:textSize="@dimen/text_small3"
                                android:layout_toRightOf="@+id/label_iv3"
                                android:layout_centerVertical="true"
                                android:textColor="@color/text11"
                                android:layout_marginLeft="2dp"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/lable_ll4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:visibility="gone">
                            <com.facebook.drawee.view.SimpleDraweeView
                                android:id="@+id/label_iv4"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_centerVertical="true"
                                fresco:placeholderImageScaleType="fitCenter"
                                fresco:actualImageScaleType="fitCenter"/>
                            <TextView
                                android:id="@+id/label_text4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="餐厅"
                                android:textSize="@dimen/text_small3"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/label_iv4"
                                android:textColor="@color/text11"
                                android:layout_marginLeft="2dp"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="趣处必读"
                android:textColor="@color/text04"
                android:textSize="@dimen/text_small"
                android:gravity="center_vertical"
                android:paddingLeft="50px"/>
            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="50px">
                <RelativeLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:visibility="invisible">
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/text04"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/quchu_details_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/quchu_content_sort"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:maxLines="6"
                        android:textColor="@color/text97"
                        android:textSize="@dimen/text_small"/>
                    <TextView
                        android:id="@+id/quchu_content_long"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:textColor="@color/text97"
                        android:textSize="@dimen/text_small"/>
                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/show_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="46px"
                android:layout_marginRight="35dp"
                android:layout_gravity="right">

                <LinearLayout
                    android:id="@+id/open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
<!--
                    <TextView
                        android:id="@+id/quchu_details_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="展开"
                        android:textColor="@color/text12" />-->

                    <ImageView
                        android:id="@+id/Spread"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/zhankai2" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/open2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <!--<TextView
                        android:id="@+id/quchu_details_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="收回"
                        android:textColor="@color/text12" />-->

                    <ImageView
                        android:id="@+id/Spread2"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/shou" />
                </LinearLayout>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="50px"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/tag1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/text_view_boder8"
                    android:text="新古典"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/text97"
                    android:gravity="center"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/tag2"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/text_view_boder8"
                    android:text="色彩"
                    android:gravity="center"
                    android:textSize="@dimen/text_small"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/text97"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tag3"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/text_view_boder8"
                    android:text="下午茶"
                    android:gravity="center"
                    android:textSize="@dimen/text_small"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/text97"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50px">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/quchu_time_iv"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/time"
                        android:scaleType="fitCenter"/>
                    <TextView
                        android:id="@+id/business_hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text97"
                        android:layout_toRightOf="@+id/quchu_time_iv"
                        android:textSize="@dimen/text_small2"
                        android:text="111"
                        android:layout_marginLeft="8dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp">
                    <ImageView
                        android:id="@+id/quchu_phone_iv"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/tel"
                        android:scaleType="fitCenter"
                        android:layout_centerVertical="true"/>
                        <TextView
                            android:id="@+id/tel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_small2"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/quchu_phone_iv"
                            android:layout_marginLeft="8dp"
                            android:textColor="@color/text13" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                    <ImageView
                        android:id="@+id/puchu_address_iv"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/position2"/>
                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_small2"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@+id/puchu_address_iv"
                            android:textColor="@color/text13"/>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/comment_cnt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="3条小鱼的感受"
                android:textColor="@color/text04"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_small"
                android:paddingLeft="50px"/>
            <ListView
                android:id="@+id/quchu_details_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:layout_marginLeft="50px"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/quchu_comment"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:textColor="#cbcbcb"
                android:textSize="@dimen/text_small4"
                android:text="全部感受"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp">
                <TextView
                    android:id="@+id/I_comment"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/text_view_boder8"
                    android:text="我要说两句"
                    android:gravity="center"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/text11"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
    </enjoytouch.com.redstar.selfview.observableScrollViewo.ObservableScrollView>
    <RelativeLayout
        android:id="@+id/quchu_details_rl"
        style="@style/Title"
        android:alpha="0.0"
        android:background="@color/touming">
    </RelativeLayout>
    <RelativeLayout
        style="@style/Title">
        <include
            layout="@layout/layout_back"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/share"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon2_2"
                android:scaleType="fitCenter"/>

            <ImageView
                android:id="@+id/zan"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon2_6"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/qu_text_collect_cnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="9dp"
                android:text="21"
                android:shadowColor="#FF666666"
                android:shadowRadius="10"
                android:shadowDx="0"
                android:shadowDy="0"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/homepage_up_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/up"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40px"
        android:layout_marginRight="35px"
        android:visibility="visible"/>
</RelativeLayout>
