<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fresco:placeholderImage="@drawable/placeholder_rectangle"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:roundedCornerRadius="5dp"
                fresco:roundTopLeft="true"
                fresco:roundTopRight="true"
                fresco:roundBottomLeft="true"
                fresco:roundBottomRight="true" />
            <RelativeLayout
                android:id="@+id/alpha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/text_view_boder4_1">
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="298px"
                    android:layout_height="@dimen/xian2"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/white"/>
                <TextView
                    android:id="@+id/iv11_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/text_middle"
                    android:textColor="@color/white"
                    android:includeFontPadding="false"
                    android:layout_marginBottom="4px"
                    android:layout_marginTop="14px" />
                <TextView
                    android:id="@+id/iv11_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/text_small"
                    android:layout_marginBottom="14px"
                    android:textColor="@color/white"
                    android:includeFontPadding="false" />
                <TextView
                    android:layout_width="298px"
                    android:layout_height="@dimen/xian2"
                    android:background="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4px"/>
            </LinearLayout>
        </RelativeLayout>
</LinearLayout>