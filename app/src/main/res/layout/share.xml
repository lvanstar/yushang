<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000">

    <RelativeLayout
        android:id="@+id/share_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/share_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="12dp"
                android:text="取消分享"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/text_view_boder15"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="30dp"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/share_main"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:layout_above="@id/share_cancel"
            android:background="@drawable/text_view_boder14">
            <RelativeLayout
                android:id="@+id/share_wechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/share_iv01"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/login_weixin"
                    android:scaleType="fitCenter"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信"
                    android:textColor="#9e9e9e"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/share_iv01"
                    android:layout_marginTop="5dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/share_pyq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/share_iv03"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/pengyouquan"
                    android:scaleType="fitCenter"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="朋友圈"
                    android:textColor="#9e9e9e"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/share_iv03"
                    android:layout_marginTop="5dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/qq_iv01"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/qq"
                    android:scaleType="fitCenter"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QQ"
                    android:textColor="#9e9e9e"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/qq_iv01"
                    android:layout_marginTop="5dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/share_sinaweibo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/share_iv04"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/icon_weibo"
                    android:scaleType="fitCenter"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新浪微博"
                    android:textColor="#9e9e9e"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/share_iv04"
                    android:layout_marginTop="5dp"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    
</RelativeLayout>
