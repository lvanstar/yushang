<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/shangpin_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="6dp"
        android:layout_marginTop="5dp"
        android:paddingRight="1dp"
        android:background="@drawable/back_round_shangpin">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_shangpin_sv"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="1.5dp"
                fresco:placeholderImage="@drawable/placeholder_square"
                fresco:placeholderImageScaleType="fitCenter"


                fresco:roundedCornerRadius="6dp"
                fresco:roundTopLeft="true"
                fresco:roundTopRight="true"
                fresco:roundBottomLeft="false"
                fresco:roundBottomRight="false"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></View>
                <ImageView
                    android:id="@+id/shangpin_clear_iv"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@drawable/shop_clear"
                    android:scaleType="fitCenter"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"/>
            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e9e9e9"/>
            <TextView
                android:id="@+id/shangpin_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="@dimen/text_middle"/>
            <TextView
                android:id="@+id/shangpin_values"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text05"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="@dimen/text_small"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:id="@+id/shangpin_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text05"
                    android:layout_marginLeft="3dp"
                    android:textSize="@dimen/text_small"
                    android:layout_centerVertical="true"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:id="@+id/item_shang_collect_iv"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_centerVertical="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/shop02"/>
                    <TextView
                        android:id="@+id/shangpin_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_small"
                        android:textColor="@color/text06"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/item_shang_collect_iv"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>