<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homepageback">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_order_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_centerHorizontal="true"
                fresco:placeholderImage="@drawable/placeholder"
                fresco:placeholderImageScaleType="fitCenter"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6">
            <TextView
                android:id="@+id/item_order_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="加载中。。。"
                android:textSize="@dimen/text_small"
                android:textColor="@color/text02"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginRight="10dp">


                <TextView
                    android:id="@+id/item_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加载中"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_middle"
                    android:textColor="@color/text02"/>

                <TextView
                    android:id="@+id/item_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加载中"
                    android:textSize="@dimen/text_middle"
                    android:textColor="@color/text02"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/item_order_price"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>