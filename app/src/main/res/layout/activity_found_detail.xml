<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="#f8f8f8"
    android:id="@+id/home">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <enjoytouch.com.redstar.selfview.observableScrollViewo.ObservableScrollView
            android:id="@+id/sv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <LinearLayout
                                android:id="@+id/viewpager"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/ll_viewpage_image"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:orientation="horizontal">
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginTop="48px">
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="旋转的条纹-手工骨瓷茶壶"
                            android:paddingLeft="48px"
                            android:textSize="16sp"
                            android:textColor="@color/text01"/>
                        <TextView
                            android:id="@+id/name2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="48px"
                            android:textColor="@color/text01"
                            android:text="给你爱丽丝梦游仙境般的奇妙下午茶"/>
                        <TextView
                            android:id="@+id/content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="86px"
                            android:layout_marginRight="35dp"
                            android:layout_marginTop="12dp"
                            android:textColor="@color/text11"
                            android:text="给你爱丽丝梦游仙境般的奇妙下午茶给你爱丽丝梦游仙境般的奇妙下午茶给你爱丽丝梦游仙境般的奇妙下午茶给你爱丽丝梦游仙境般的奇妙下午茶给你爱丽丝梦游仙境般的奇妙下午茶给你爱丽丝梦游仙境般的奇妙下午茶"/>
                        <RelativeLayout
                            android:id="@+id/rl_zhankai"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginTop="46px"
                            android:visibility="gone">
                            <LinearLayout
                                android:id="@+id/zhankai"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginRight="35dp"
                                android:paddingTop="20px"
                                android:paddingBottom="20px"
                                android:gravity="center_vertical">
                                <!--<TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="展开"
                                    android:textColor="@color/text12"
                                    android:layout_gravity="center_vertical"/>-->
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/zhankai2"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/shou"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginRight="35dp"
                                android:gravity="center_vertical"
                                android:visibility="gone">
                                <!--<TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="收回"
                                    android:textColor="@color/text12"
                                    android:layout_gravity="center_vertical"/>-->
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/shou"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/designers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="48px"
                        android:text="设计师"
                        android:textColor="@color/text04"
                        android:gravity="center_vertical"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="52px">
                        <LinearLayout
                            android:id="@+id/designers1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <com.facebook.drawee.view.SimpleDraweeView
                                android:id="@+id/designers_snap"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/pic"
                                fresco:roundAsCircle="true"/>
                            <TextView
                                android:id="@+id/designers_name"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="HJHHU HGHHHNS"
                                android:layout_gravity="center_vertical"
                                android:textSize="@dimen/text_small"
                                android:textStyle="bold"
                                android:textColor="@color/text01"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/designers2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:visibility="gone">
                            <com.facebook.drawee.view.SimpleDraweeView
                                android:id="@+id/designers_snap2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/pic"
                                fresco:roundAsCircle="true"/>
                            <TextView
                                android:id="@+id/designers_name2"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="HJHHU HGHHHNS"
                                android:layout_gravity="center_vertical"
                                android:textSize="@dimen/text_small"
                                android:textStyle="bold"
                                android:textColor="@color/text01"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="48px"
                        android:text="商品详情"
                        android:textColor="@color/text04"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="尺寸：15cm{D}x10cm{H}"
                        android:layout_marginLeft="86px"
                        android:textColor="@color/text11"
                        android:layout_marginRight="35dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="86px"
                        android:layout_marginRight="35dp"
                        android:text="-不得用百洁布和钢丝球清洗"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/text11"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="45px"
                    android:layout_marginBottom="70px">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:text="商品品牌"
                        android:gravity="center_vertical"/>
                    <LinearLayout
                        android:id="@+id/brand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="20px">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/back_round_shangpin">
                            <com.facebook.drawee.view.SimpleDraweeView
                                android:id="@+id/brand_logo"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                fresco:roundedCornerRadius="5dp"
                                fresco:roundTopLeft="true"
                                fresco:roundTopRight="true"
                                fresco:roundBottomLeft="true"
                                fresco:roundBottomRight="true"
                                android:padding="1dp"
                                fresco:placeholderImage="@drawable/initialize" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="40px">
                            <TextView
                                android:id="@+id/brand_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="THE DBCHDG"
                                android:textStyle="bold"
                                android:textColor="@color/text01"/>
                            <TextView
                                android:id="@+id/brand_desc"
                                android:textColor="@color/text07"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="再造你的生活" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                        </RelativeLayout>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="35px"
                            android:src="@drawable/zhankai"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitXY" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </enjoytouch.com.redstar.selfview.observableScrollViewo.ObservableScrollView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/details_rl"
        style="@style/Title"
        android:alpha="0.1"
        android:background="@color/touming">
    </RelativeLayout>
    <RelativeLayout
        style="@style/Title">
        <include
            android:id="@+id/back"
            layout="@layout/layout_back">
        </include>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/share"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon2_2" />
            <ImageView
                android:id="@+id/zan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/shoucang1"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/collect_cnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="21"
                android:shadowColor="#FF666666"
                android:shadowRadius="10"
                android:shadowDx="0"
                android:shadowDy="0"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:layout_marginRight="5dp"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/homepage_up_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/up"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40px"
        android:layout_marginRight="35px"
        android:visibility="visible"/>
</RelativeLayout>