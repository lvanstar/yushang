<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="225dp"
    android:id="@+id/home"
   >
    <RelativeLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="6dp">
        <com.facebook.drawee.view.SimpleDraweeView

            android:layout_width="match_parent"
            android:layout_height="225dp"
            fresco:backgroundImage="@color/white"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundedCornerRadius="5dp"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            fresco:placeholderImage="@drawable/placeholder_square"
            fresco:placeholderImageScaleType="fitCenter"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40px"/>
        <LinearLayout
            android:layout_below="@id/sdv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35px"
            android:layout_marginRight="35px"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:text="加载中..."
                android:textColor="@color/text05"
                android:textSize="@dimen/text_middle"
                android:layout_marginBottom="1.5px"
                android:paddingBottom="1.5px"/>
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="加载中..."
                android:textColor="@color/thread"
               android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="1.5px"
                android:paddingTop="1.5px"
                android:textSize="@dimen/text_small"/>
        </LinearLayout>
    </RelativeLayout>
    <!--android:lines="2"-->
    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="6dp"-->
        <!--android:background="@color/bg05">-->

    <!--</LinearLayout>-->
</LinearLayout>