<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/make_orod"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="@color/theorder_bg">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_orderimg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            fresco:actualImageScaleType="focusCrop"
            android:layout_marginLeft="15dp"
            fresco:placeholderImage="@drawable/placeholder_square"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundedCornerRadius="3dp"/>
        <TextView
            android:id="@+id/item_make_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="木纹时钟"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/iv_orderimg"
            android:textSize="@dimen/text_middle"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/text01"
            android:layout_toRightOf="@+id/iv_orderimg"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥2199.00"
                android:layout_alignParentRight="true"
                android:textColor="@color/text01"
                android:textSize="@dimen/text_middle" />
            <TextView
                android:id="@+id/text_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                android:layout_below="@+id/text_price"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:textColor="@color/text55"
                android:text="数量:1"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/xian"/>
    </RelativeLayout>



</LinearLayout>
