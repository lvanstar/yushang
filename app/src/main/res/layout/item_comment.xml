<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/pic2"
                    android:id="@+id/portrait" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="137****3402"
                        android:id="@+id/tel_number" />
<!--                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:id="@+id/star" />-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv1"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/star2"
                            android:layout_marginRight="2dp"/>
                        <ImageView
                            android:id="@+id/iv2"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/star2"
                            android:layout_marginRight="2dp"/>
                        <ImageView
                            android:id="@+id/iv3"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/star3"
                            android:layout_marginRight="2dp"/>
                        <ImageView
                            android:id="@+id/iv4"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/star1"
                            android:layout_marginRight="2dp"/>
                        <ImageView
                            android:id="@+id/iv5"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/star1"
                            android:layout_marginRight="2dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
                <enjoytouch.com.redstar.selfview.tagview.TagView
                    android:id="@+id/tagview_sto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp">

                </enjoytouch.com.redstar.selfview.tagview.TagView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:text="分享一下你对家居行业的想法,价格及服务的感受，超过1000个字符可以获得15个积分哦！"
                android:id="@+id/comments_main" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="6dp">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/comment_image_1" />
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/comment_image_2" />
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/comment_image_3" />
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/comment_image_4" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
