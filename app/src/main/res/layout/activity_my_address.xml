<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/xian3"
    tools:context="enjoytouch.com.redstar.activity.AddressActivity">
    <RelativeLayout
        style="@style/Title"
        android:background="@color/bg"
        android:id="@+id/relativeLayout">
        <include
            android:id="@+id/back"
            layout="@layout/layout_back"></include>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收货地址"
            android:textSize="@dimen/text_large"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/xian"-->
        <!--android:background="@color/xian"/>-->
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/shouhuodizhi"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/xian3"
        >
        <RelativeLayout
            android:id="@+id/sr_nothing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:visibility="visible"
            >

            <ImageView
                android:id="@+id/sr_none"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                android:src="@drawable/a24"/>
            <TextView
                android:id="@+id/false1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_below="@id/sr_none"
                android:layout_marginTop="20dp"
                android:text="您还没有添加收货地址"
                android:textSize="16sp"
                android:textColor="@color/text55"/>

        </RelativeLayout>

        <enjoytouch.com.redstar.selfview.swipemenuleft.SwipeMenuListView
            android:id="@+id/lv_myaddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:background="@color/xian3"
            android:visibility="gone"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/xian3">
        <TextView
            android:id="@+id/toAddAddress"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_large"
            android:gravity="center"
            android:background="@drawable/text_pinglun"
            android:layout_centerInParent="true"
            android:text="新建收货地址"/>

    </RelativeLayout>
</LinearLayout>
