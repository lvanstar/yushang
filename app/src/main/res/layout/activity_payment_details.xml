<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg1"
    tools:context="enjoytouch.com.redstar.activity.PaymentDetailsActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        style="@style/Title"
        android:background="@color/bg">

        <include layout="@layout/layout_back"
            android:id="@+id/back">

        </include>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="支付详情"
            android:textColor="@color/white"
            android:textSize="@dimen/text_large" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/xian"></View>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="@color/homepageback"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_dm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="订单号"
                android:textColor="@color/text01"
                android:textSize="@dimen/text_middle" />

            <TextView
                android:id="@+id/order_confirm_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/tv_dm"
                android:text="10903425368742"
                android:textColor="@color/text01"
                android:textSize="@dimen/text_middle" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/xian"></View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/details_shop_Rl"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_dm1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="商户"
                android:textColor="@color/text01"
                android:textSize="@dimen/text_middle" />

            <TextView
                android:id="@+id/order_confirm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="寓上"
                android:textColor="@color/text02"
                android:textSize="@dimen/text_middle" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:background="@color/xian"></View>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_dm2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="应付款"
                android:textColor="@color/text01"
                android:textSize="@dimen/text_middle" />

            <TextView
                android:id="@+id/order_confirm_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="¥ 200.00"
                android:textColor="@color/text02"
                android:textSize="@dimen/text_middle" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:background="@color/xian"></View>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="选择支付方式"
                android:textColor="@color/text01"
                android:textSize="@dimen/text_middle" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:background="@color/xian"></View>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/pay_zhifubao"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/theorder_bg">

            <ImageView
                android:id="@+id/pay_iv01"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/zhifubao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/pay_iv01"
                android:text="支付宝"
                android:textColor="@color/text01"
                android:textSize="@dimen/text_middle" />


            <ImageView
                android:id="@+id/pay_check_02"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/pay_select2"
                android:visibility="visible"></ImageView>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:background="@color/xian" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pay_weixin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/theorder_bg">

            <ImageView
                android:id="@+id/pay_iv02"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/wechat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/pay_iv02"
                android:text="微信"
                android:textColor="@color/text01"
                android:textSize="@dimen/text_middle" />


            <ImageView
                android:id="@+id/pay_check_03"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/pay_unselected"></ImageView>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:background="@color/xian" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/order_confirm_pay"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/text_pinglun"
        android:gravity="center"
        android:text="立即支付"
        android:textColor="@color/white"
        android:textSize="@dimen/text_large" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"></View>

</LinearLayout>
