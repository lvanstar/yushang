<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Address2Activity">
    <RelativeLayout
        style="@style/Title"
        android:background="@color/bg"
        android:id="@+id/relativeLayout">
        <include
            android:id="@+id/back"
            layout="@layout/layout_back"></include>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择收货地址"
            android:textSize="@dimen/text_large"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/toAddAddress"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="管理"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_middle"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/xian3">
        <RelativeLayout
            android:id="@+id/sr_nothing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            >

            <ImageView
                android:id="@+id/sr_none"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                android:src="@drawable/a24"/>
            <TextView
                android:id="@+id/false1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_below="@id/sr_none"
                android:layout_marginTop="20dp"
                android:text="还没有添加过地址"
                android:textSize="16sp"
                android:textColor="#9e9e9e"/>

        </RelativeLayout>
        <ListView
            android:id="@+id/lv_myaddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </RelativeLayout>
</LinearLayout>
