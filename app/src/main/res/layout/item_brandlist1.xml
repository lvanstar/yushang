<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/home">
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/brand_home_list2_sv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            fresco:placeholderImage="@drawable/initialize_big"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:actualImageScaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#60000000"
            android:paddingLeft="50px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="30px"
            android:paddingBottom="30px">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/brand_list_head_sv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/yu3"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:roundedCornerRadius="5dp"
                fresco:roundTopLeft="true"
                fresco:roundTopRight="true"
                fresco:roundBottomLeft="true"
                fresco:roundBottomRight="true" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/brand_list_head_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="漾美 medfsd"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_middle"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/brand_list_head_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在美丽中传递生活的喜悦"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_small"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/white"/>
    <RelativeLayout
        android:id="@+id/item_brandlist_rl"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/brandlist_sv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            fresco:placeholderImage="@drawable/placeholder_rectangle"
            fresco:placeholderImageScaleType="centerCrop"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            fresco:roundedCornerRadius="5dp"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true" />
        <RelativeLayout
            android:id="@+id/alpha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/text_view_boder4_1">
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:layout_marginBottom="12dp">
            <TextView
                android:id="@+id/brandlist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载中..."
                android:textColor="@color/white"
                android:textSize="@dimen/text_middle"/>
            <TextView
                android:id="@+id/brandlist_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载中..."
                android:textColor="@color/white"
                android:textSize="@dimen/text_small"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>