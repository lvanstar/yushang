<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BrandHomeList1Activity"
    android:id="@+id/home">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/brand_home_list1_xrecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/homepage_up_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/up"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40px"
            android:layout_marginRight="35px"
            android:visibility="visible"/>
    </RelativeLayout>
    <!--<RelativeLayout-->
        <!--android:id="@+id/brand_home_details_rl"-->
        <!--style="@style/Title"-->
        <!--android:alpha="0.0"-->
        <!--android:background="@color/touming">-->
    <!--</RelativeLayout>-->
    <RelativeLayout
        android:id="@+id/title"
        style="@style/Title">
        <RelativeLayout
            android:id="@+id/details_rl"
            android:background="@color/touming"
            android:alpha="0.0"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </RelativeLayout>
        <include
            layout="@layout/layout_back">
        </include>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
           >
            <ImageView
                android:id="@+id/share"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon2_2"
                android:scaleType="fitCenter"/>
            <ImageView
                android:id="@+id/zan"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon2_1"
                android:scaleType="fitCenter"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/collect_cnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="0"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/text_small"
                android:shadowColor="#FF666666"
                android:shadowRadius="10"
                android:shadowDx="0"
                android:shadowDy="0"
                android:layout_marginRight="9dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
