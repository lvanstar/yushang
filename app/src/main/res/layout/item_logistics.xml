<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="fill_parent"
        android:layout_height="7dp"></View>
    <RelativeLayout
        android:id="@+id/logistics_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/logistics_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物流公司:"
                android:textSize="@dimen/text_small"
                android:textColor="@color/text01"/>
            <TextView
                android:id="@+id/logistics_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物流单号:"
                android:layout_below="@+id/logistics_name"
                android:layout_marginTop="3dp"
                android:textSize="@dimen/text_small"
                android:textColor="@color/text01"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/zhankai"/>

    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="7dp"></View>
</LinearLayout>