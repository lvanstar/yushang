<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/content_sv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            fresco:placeholderImage="@drawable/tou"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:roundAsCircle="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/content_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/content_sv"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text01"
            android:text="寓上"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="@dimen/text_middle"
            android:layout_alignTop="@+id/content_sv"
            />
        <TextView
            android:id="@+id/content_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-6-13"

            android:textColor="@color/text04"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/content_sv"
            android:layout_marginRight="10dp" />
        <TextView
            android:id="@+id/content_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#979797"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/content_date"
            android:textSize="@dimen/text_middle"
            android:text="寓上"
            android:layout_marginRight="35dp"
            android:layout_alignLeft="@+id/content_title"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>
        <LinearLayout
            android:id="@+id/content_ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:orientation="horizontal"
            >
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/content_sv001"
                android:layout_width="50dp"
                android:layout_height="50dp"
                fresco:placeholderImage="@drawable/tou"
                android:visibility="gone"
                fresco:placeholderImageScaleType="fitCenter"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/content_sv002"
                android:layout_width="50dp"
                android:layout_height="50dp"
                fresco:placeholderImage="@drawable/tou"
                fresco:placeholderImageScaleType="fitCenter"
                android:layout_marginLeft="15dp"
                android:visibility="gone"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/content_sv003"
                android:layout_width="50dp"
                android:layout_height="50dp"
                fresco:placeholderImage="@drawable/tou"
                fresco:placeholderImageScaleType="fitCenter"
                android:layout_marginLeft="15dp"
                android:visibility="gone"
                />
        </LinearLayout>

    <View
        android:id="@+id/viewHint"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/xian"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:visibility="invisible"/>
</LinearLayout>