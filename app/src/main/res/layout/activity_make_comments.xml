<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homepageback"
    android:orientation="vertical"
    tools:context="enjoytouch.com.redstar.activity.MakeCommentsActivity">

     <RelativeLayout
         style="@style/Title"
         android:background="@color/defaulttxt2"
        android:id="@+id/relativeLayout">

         <include
             android:id="@+id/back"
             layout="@layout/layout_back"></include>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="写评论"
            android:gravity="center"
            android:textSize="@dimen/text_large"
            android:textColor="@color/text01"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/xian"
        android:background="@color/xian"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/grey"
        android:id="@+id/relativeLayout2">
        <LinearLayout
            android:id="@+id/star_ll"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/iv1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/star1"
                android:layout_marginRight="2dp"/>
            <ImageView
                android:id="@+id/iv2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/star1"
                android:layout_marginRight="2dp"/>
            <ImageView
                android:id="@+id/iv3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/star1"
                android:layout_marginRight="2dp"/>
            <ImageView
                android:id="@+id/iv4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/star1"
                android:layout_marginRight="2dp"/>
            <ImageView
                android:id="@+id/iv5"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/star1"
                android:layout_marginRight="2dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="觉得怎么样，打个分吧"
            android:textSize="15sp"
            android:id="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/star_ll"
             />
    </RelativeLayout>

    <enjoytouch.com.redstar.selfview.tagview.MainTagView
        android:id="@+id/tagview_sto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp">
    </enjoytouch.com.redstar.selfview.tagview.MainTagView>
    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"></View>
    <View
        android:layout_width="fill_parent"
        android:background="@color/xian"
        android:layout_height="@dimen/xian"></View>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:background="@color/white"
        android:id="@+id/linearLayout">
        <View
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:orientation="horizontal"></View>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/editText"
            android:background="@null"
            android:hint="亲! 请写一下你的点评"
            android:gravity="top|left"
            android:layout_below="@+id/linearLayout_1"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="30dp"></View>
    <RelativeLayout
        android:background="@color/homepageback"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@drawable/text_pinglun2"
            android:id="@+id/button_publish"
            android:text="发表"
            android:textColor="@color/white"
            android:textSize="@dimen/text_large"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>



</LinearLayout>
