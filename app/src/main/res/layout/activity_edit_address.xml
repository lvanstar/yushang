<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/code_bg"
    tools:context="enjoytouch.com.redstar.activity.AddAddressActivity">
    <RelativeLayout
        style="@style/Title"
        android:background="@color/bg"
        android:id="@+id/relativeLayout">
        <include
            android:id="@+id/back"
            layout="@layout/layout_back"></include>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑收货地址"
            android:textSize="@dimen/text_large"
            android:textColor="@color/defaulttxt2"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:text="            删除"
            android:textSize="@dimen/text_middle"
            android:gravity="center"
            android:textColor="@color/defaulttxt2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:background="@color/homepageback"
        android:layout_height="45dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:text="收货人：   "
            android:gravity="center_vertical"
            android:textSize="@dimen/text_middle"
            android:textColor="@color/text02"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/et_name"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@null"
            android:layout_weight="1"
            android:hint="请输入收货人"
            android:text=""
            android:singleLine="true"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_middle"
            android:textColor="@color/text01"
            />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:background="@color/xian"
        android:layout_marginLeft="20dp"
        android:layout_height="@dimen/xian"></View>
    <LinearLayout
        android:layout_width="fill_parent"
        android:background="@color/homepageback"
        android:layout_height="45dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:text="手机号码：   "
            android:gravity="center_vertical"
            android:textSize="@dimen/text_middle"
            android:textColor="@color/text02"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:maxLength="11"
            android:text=""
            android:inputType="number"
            android:background="@null"
            android:hint="请输入手机号码"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_middle"
            android:textColor="@color/text01"
            />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:background="@color/xian"
        android:layout_marginLeft="20dp"
        android:layout_height="@dimen/xian"></View>
