    <View
        android:layout_width="fill_parent"
        android:background="@color/xian"
        android:layout_marginLeft="20dp"
        android:layout_height="@dimen/xian"></View>
    <LinearLayout
        android:id="@+id/ll_addwin"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/homepageback"
        >
        <TextView
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:text="所在地区：   "
            android:gravity="center_vertical"
            android:textSize="@dimen/text_middle"
            android:textColor="@color/text02"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/tv_winAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_small"
            android:text=""
            android:textColor="@color/text01"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/youjiantouhui"/>
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:background="@color/xian"
        android:layout_marginLeft="20dp"
        android:layout_height="@dimen/xian"></View>
    <LinearLayout
        android:layout_width="fill_parent"
        android:background="@color/homepageback"
        android:layout_height="45dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:text="详细地址：   "
            android:gravity="center_vertical"
            android:textSize="@dimen/text_middle"
            android:textColor="@color/text02"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/et_address"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@null"
            android:layout_weight="1"
            android:singleLine="true"
            android:text=""
            android:hint="请输入详细地址"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_middle"
            android:textColor="@color/text01"
            />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:background="@color/xian"
        android:layout_height="@dimen/xian"></View>
    <View
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        ></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
       >
        <TextView
            android:id="@+id/tv_save"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_large"
            android:gravity="center"
            android:background="@drawable/text_pinglun"
            android:layout_centerInParent="true"
            android:text="保存"/>

    </RelativeLayout>

</LinearLayout>
