<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/homepageback">

    <RelativeLayout
        style="@style/Title"
        android:background="@color/bg">
        <include
            android:id="@+id/back"
            layout="@layout/layout_back">
        </include>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="更换手机号"
            android:textColor="@color/white"
            android:textSize="@dimen/text_large" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="取消"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:paddingLeft="5dp"
            android:textColor="@color/text01"
            android:visibility="invisible"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xian"
        android:background="@color/xian"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/defaulttxt2"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/xian"
                    android:background="#00000000"
                    android:textColor="@color/shopnametext"
                    android:hint="请输入手机号码"
                    android:maxLength="11"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textSize="13sp"
                    android:focusable="true"
                    android:textColorHint="@color/xian"
                    android:focusableInTouchMode="true"/>
                <TextView
                    android:id="@+id/xian"
                    android:layout_width="@dimen/xian"
                    android:layout_height="match_parent"
                    android:background="@color/xian"
                    android:layout_toRightOf="@id/image01"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/image01"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:text="+86"
                    android:gravity="center_vertical"
                    android:paddingRight="20dp"
                    android:textColor="@color/result_view"
                    android:textSize="13sp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/xian"
                android:background="@color/xian"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">
                    <EditText
                        android:id="@+id/et_getcode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/image02"
                        android:background="#00000000"
                        android:maxLength="4"
                        android:hint="请输入短信验证码"
                        android:textColor="@color/shopnametext"
                        android:textColorHint="@color/xian"
                        android:inputType="numberDecimal"
                        android:textSize="13sp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_getcode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:text="获取验证码"
                        android:background="@color/bg_grak"
                        android:gravity="center"
                        android:textColor="@color/yiduiwan_text"
                        android:textSize="@dimen/text_small" />
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/xian"
                android:background="@color/xian"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"></View>
        <RelativeLayout
            android:id="@+id/login_rl_r"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/black_roundcorner">
            <TextView
                android:id="@+id/tv_huan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="更换"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收不到短信？使用"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_yuyin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="语音验证码"
                android:layout_toRightOf="@id/tv"
                android:textColor="@color/lan"
                android:textSize="@dimen/text_small"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/replace_yuyin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/gray"
            android:gravity="center"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="正在拨打中...请留意相关电话"
                android:textColor="@color/text02"
                android:textSize="@dimen/text_middle" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"/>
    </LinearLayout>
</LinearLayout>
